{
    "compilerOptions": {
        "noUncheckedIndexedAccess": true,
        "moduleDetection": "auto",
        "allowJs": true,
        "checkJs": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["es2022", "dom", "dom.iterable"],
        "outDir": "./public/",
        "sourceMap": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "P@/*": ["public/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "vueCompilerOptions": {
        "target": 3.5
    },
    "exclude": ["./public/**/*"],
    "include": [
        "src/**/*",
        "vite.config.ts",
        "vite.entries.ts",
        "vite/viteLoader.ts"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": ["vue", "vite/client"]
    }
}
