{
    "name": "versacompiler",
    "version": "2.0.0",
    "description": "Una herramienta para compilar y minificar archivos .vue, .js y .ts para proyectos de Vue 3 con soporte para TypeScript.",
    "main": "dist/main.js",
    "bin": {
        "versacompiler": "dist/main.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "dev": "tsx --watch src/main.ts --watch --verbose",
        "compile": "tsx src/main.ts --all",
        "test": "jest --config jest.config.js",
        "build": "tsx src/main.ts --all",
        "lint": "oxlint --fix --config .oxlint.json",
        "lint:eslint": "eslint --ext .js,.ts,.vue src/ --fix"
    },
    "keywords": [
        "vue",
        "compiler",
        "minifier",
        "vue3",
        "versacompiler",
        "typescript",
        "linter"
    ],
    "author": "Jorge Jara H (kriollone@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "@vue/compiler-dom": "^3.5.16",
        "@vue/reactivity": "^3.5.16",
        "@vue/runtime-core": "^3.5.16",
        "@vue/runtime-dom": "^3.5.16",
        "browser-sync": "^3.0.4",
        "chalk": "5.4.1",
        "chokidar": "^4.0.3",
        "enhanced-resolve": "^5.18.1",
        "execa": "^9.6.0",
        "find-root": "^1.1.0",
        "fs-extra": "^11.3.0",
        "get-port": "^7.1.0",
        "oxc-minify": "^0.72.2",
        "oxc-parser": "^0.72.2",
        "resolve": "^1.22.10",
        "vue": "3.5.16",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/cli": "^4.1.8",
        "@types/browser-sync": "^2.29.0",
        "@types/find-root": "^1.1.4",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.29",
        "@types/resolve": "^1.20.6",
        "@types/yargs": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "@vue/eslint-config-typescript": "^14.5.0",
        "@vue/test-utils": "^2.4.6",
        "code-tag": "^1.2.0",
        "eslint": "^9.28.0",
        "eslint-import-resolver-typescript": "^4.4.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-oxlint": "^0.17.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-unicorn": "^59.0.1",
        "eslint-plugin-vue": "^10.1.0",
        "happy-dom": "^17.6.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "30.0.0-beta.3",
        "jest-environment-node": "30.0.0-beta.3",
        "oxlint": "^0.17.0",
        "prettier": "3.5.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.1.8",
        "ts-jest": "^29.3.4",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "vue-eslint-parser": "^10.1.3"
    }
}
