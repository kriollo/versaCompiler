{
    "name": "versacompiler",
    "version": "2.0.0",
    "description": "Una herramienta para compilar y minificar archivos .vue, .js y .ts para proyectos de Vue 3 con soporte para TypeScript.",
    "main": "dist/index.js",
    "bin": {
        "versacompiler": "dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "dev": "node --watch dist/main.ts",
        "compile": "node dist/main.ts",
        "compile-dev": "node dist/main.ts --all",
        "compile-prod": "node dist/main.ts --all --prod",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "keywords": [
        "vue",
        "compiler",
        "minifier",
        "vue3",
        "versacompiler",
        "typescript"
    ],
    "author": "Jorge Jara H (kriollone@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "acorn": "^8.14.1",
        "acorn-walk": "^8.3.4",
        "browser-sync": "^3.0.4",
        "chalk": "5.4.1",
        "chokidar": "^4.0.3",
        "execa": "^9.5.3",
        "find-root": "^1.1.0",
        "fs-extra": "^11.3.0",
        "get-port": "^7.1.0",
        "oxc-minify": "^0.71.0",
        "oxc-parser": "^0.71.0",
        "typescript": "^5.8.3",
        "vue": "3.5.14",
        "yargs": "^17.7.2",
        "pino": "^9.7.0",
        "@teambit/oxc.linter.oxlint-node": "^0.0.1",
        "pino-pretty": "^13.0.0"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.6",
        "@types/node": "^22.15.17",
        "code-tag": "^1.2.0",
        "jest": "^29.7.0",
        "oxlint": "^0.16.10",
        "prettier": "3.5.3",
        "tailwindcss": "^4.1.6"
    }
}
