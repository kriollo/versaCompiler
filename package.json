{
    "name": "versacompiler",
    "version": "1.0.0",
    "description": "Una herramienta para compilar y minificar archivos .vue, .js y .ts para proyectos de Vue 3 con soporte para TypeScript.",
    "main": "dist/index.js",
    "bin": {
        "versacompiler": "dist/index.js"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "dev": "node --watch dist/index.js",
        "compile": "node dist/index.js",
        "compile-dev": "node dist/index.js --all",
        "compile-prod": "node dist/index.js --all --prod"
    },
    "keywords": [
        "vue",
        "compiler",
        "minifier",
        "vue3",
        "versacompiler",
        "typescript"
    ],
    "author": "Jorge Jara H (kriollone@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "chalk": "5.4.1",
        "chokidar": "^4.0.3",
        "oxc-minify": "^0.67.0",
        "acorn": "^8.14.1",
        "vue": "3.5.13",
        "get-port": "^7.1.0",
        "typescript": "^5.8.3",
        "oxlint": "^0.16.9",
        "browser-sync": "^3.0.4"
    },
    "devDependencies": {
        "prettier": "3.5.3",
        "@types/node": "^22.15.3",
        "code-tag": "^1.2.0"
    }
}
