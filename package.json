{
    "name": "versacompiler",
    "version": "2.0.0",
    "description": "Una herramienta para compilar y minificar archivos .vue, .js y .ts para proyectos de Vue 3 con soporte para TypeScript.",
    "main": "dist/index.js",
    "bin": {
        "versacompiler": "dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "dev": "node --watch dist/main.ts --watch",
        "start": "node --watch dist/main.ts --watch",
        "compile": "tsc --incremental --tsBuildInfoFile ./.tsbuildinfo",
        "build": "pnpm run clean && pnpm run compile && pnpm run lint",
        "build:prod": "cross-env NODE_ENV=production pnpm run build",
        "build:dev": "cross-env NODE_ENV=development pnpm run build",
        "clean": "rimraf dist coverage .tsbuildinfo",
        "test": "jest --config jest.config.cjs",
        "test:coverage": "jest --config jest.config.cjs --coverage",
        "test:watch": "jest --config jest.config.cjs --watch",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --config jest.config.cjs",
        "test:single": "jest --config jest.config.cjs",
        "test:transforms": "jest --config jest.config.cjs tests/transforms-simple.test.ts",
        "test:all": "jest --config jest.config.cjs --coverage --verbose",
        "lint": "eslint src/ --ext .vue,.ts,.js --cache",
        "lint:fix": "eslint src/ --ext .vue,.ts,.js --fix --cache",
        "lint:check": "eslint --print-config src/js/components/modal.vue",
        "lint:oxlint": "oxlint src/",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch"
    },
    "keywords": [
        "vue",
        "compiler",
        "minifier",
        "vue3",
        "versacompiler",
        "typescript"
    ],
    "author": "Jorge Jara H (kriollone@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "browser-sync": "^3.0.4",
        "chalk": "5.4.1",
        "chokidar": "^4.0.3",
        "enhanced-resolve": "^5.18.1",
        "execa": "^9.6.0",
        "find-root": "^1.1.0",
        "fs-extra": "^11.3.0",
        "get-port": "^7.1.0",
        "oxc-minify": "^0.72.1",
        "oxc-parser": "^0.72.1",
        "resolve": "^1.22.10",
        "vue": "3.5.15",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.27.3",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/cli": "^4.1.8",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.24",
        "@typescript-eslint/eslint-plugin": "^8.33.0",
        "@typescript-eslint/parser": "^8.33.0",
        "@vue/eslint-config-typescript": "^14.5.0",
        "code-tag": "^1.2.0",
        "eslint": "^9.27.0",
        "eslint-import-resolver-typescript": "^4.4.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-oxlint": "^0.16.12",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-unicorn": "^59.0.1",
        "eslint-plugin-vue": "^10.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "30.0.0-beta.3",
        "oxlint": "^0.16.12",
        "prettier": "3.5.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.1.8",
        "ts-jest": "^29.3.4",
        "typescript": "^5.8.3",
        "vue-eslint-parser": "^10.1.3"
    }
}
