{
    "name": "versacompiler",
    "version": "2.0.0",
    "description": "Una herramienta para compilar y minificar archivos .vue, .js y .ts para proyectos de Vue 3 con soporte para TypeScript.",
    "main": "dist/index.js",
    "bin": {
        "versacompiler": "dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "dev": "node --watch dist/main.ts",
        "compile": "node dist/main.ts --all",
        "compile-dev": "node dist/main.ts --all",
        "compile-prod": "node dist/main.ts --all --prod",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "lint": "eslint src/ --ext .vue,.ts,.js",
        "lint:fix": "eslint src/ --ext .vue,.ts,.js --fix",
        "lint:check": "eslint --print-config src/js/components/modal.vue",
        "lint:oxlint": "oxlint src/"
    },
    "keywords": [
        "vue",
        "compiler",
        "minifier",
        "vue3",
        "versacompiler",
        "typescript"
    ],
    "author": "Jorge Jara H (kriollone@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "browser-sync": "^3.0.4",
        "chalk": "5.4.1",
        "chokidar": "^4.0.3",
        "execa": "^9.6.0",
        "find-root": "^1.1.0",
        "fs-extra": "^11.3.0",
        "get-port": "^7.1.0",
        "oxc-minify": "^0.72.0",
        "oxc-parser": "^0.72.0",
        "oxc-walker": "^0.2.5",
        "typescript": "^5.8.3",
        "vue": "3.5.15",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/cli": "^4.1.7",
        "@types/node": "^22.15.23",
        "@typescript-eslint/eslint-plugin": "^8.33.0",
        "@typescript-eslint/parser": "^8.33.0",
        "@vue/eslint-config-typescript": "^14.5.0",
        "code-tag": "^1.2.0",
        "eslint": "^9.27.0",
        "eslint-import-resolver-typescript": "^4.4.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-oxlint": "^0.16.12",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-unicorn": "^59.0.1",
        "eslint-plugin-vue": "^10.1.0",
        "jest": "^29.7.0",
        "oxlint": "^0.16.12",
        "prettier": "3.5.3",
        "tailwindcss": "^4.1.7",
        "vue-eslint-parser": "^10.1.3"
    }
}
